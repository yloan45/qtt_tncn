<!DOCTYPE html>
<html lang="en">

<head>
  <%- include('./partials/head') %>
  <style scoped>
    /* Đặt lớp CSS hidden */
    .step.hidden {
      display: none;
    }

    .step {
      background-color: white;
    }
  </style>
</head>


<body>
  <div class="container">
    <div class="khungtong">
      <header>
        <%- include('./partials/header') -%> 
      </header>
      <!--phan header-->
      <% let totalIndex = 0 %>
      <div class="container-fluid" style="margin-top: 1pc; margin-bottom: 1pc;">
        <h3>Danh sách các nguồn thu nhập trong năm 2023</h3>
        <table class="table table-striped table-bordered mt-3 " id="data-table" style="text-align: center;">
          <thead style="text-align: center; background-color: #2886d3; color: white;">
            <th>STT</th>
            <th>Nơi làm việc</th>
            <th>Mã số thuế của đơn vị</th>
            <th>Email</th>
            <th>Điện thoại</th>
            <th>Tổng thu nhập nhận được <br> (VNĐ)</th>
            <th>Ghi chú</th>
          </thead>
          <tbody>

            <% tochuckekhaithue.forEach((canhan, index) => { %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= canhan.to_chuc.tentochuc %></td>
              <td><%= canhan.to_chuc.masothue %></td>
              <td><%= canhan.to_chuc.email %></td>
              <td><%= canhan.to_chuc.phone %></td>
              <td><%= parseFloat(canhan.thunhaptinhthue).toLocaleString() %></td>
              <td><%= canhan.ghichu %></td>
            </tr>
            <% totalIndex++ %>
            <% }) %>
          </tbody>
          <h5 style="font-size: 16px; text-align: right; margin-right: 15px;">Tổng cộng: <%= totalIndex %> </h5>
        </table>
        <br><br><br>
      </div>
    </div>
  </div>
  <footer>
    <%- include('../partials/footer') %>
  </footer>
</body>

</html>