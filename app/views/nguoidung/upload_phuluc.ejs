<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>File Upload Table with Bootstrap</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>

<div class="container mt-5">
    <h2>File Upload Table</h2>
    <button onclick="deleteAllRows()">Delete all</button>
    <form action="">
        <table  class="table table-striped table-bordered mt-3 "  id="fileTable" style="text-align: center;">
            <thead>
                <tr>
                    <th>Tên Trường</th>
                    <th>Upload File</th>
                    <th>Xóa</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <select class="form-control" name="fieldName[]">
                            <option value="field1">Trường 1</option>
                            <option value="field2">Trường 2</option>
                            <!-- Thêm các lựa chọn khác nếu cần -->
                        </select>
                    </td>
                    <td><input type="file" class="form-control-file" name="fileData[]"></td>
                    <td><button type="button" class="btn btn-danger" onclick="deleteRow(this)">Xóa</button></td>
                </tr>
            </tbody>
        </table>
        <button type="">Add </button>
    </form>
    <button type="button" class="btn btn-primary" onclick="addRow()">Thêm Hàng Mới</button>
</div>

<!-- Bootstrap JS and dependencies -->
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>


<script>
    function addRow() {
        var table = document.getElementById("fileTable").getElementsByTagName('tbody')[0];
        var newRow = table.insertRow(table.rows.length);
        var cell1 = newRow.insertCell(0);
        var cell2 = newRow.insertCell(1);
        var cell3 = newRow.insertCell(2);

        var selectList = document.createElement("select");
        selectList.className = "form-control";
        selectList.name = "fieldName[]";
        var option1 = document.createElement("option");
        option1.value = "field1";
        option1.text = "Trường 1";
        var option2 = document.createElement("option");
        option2.value = "field2";
        option2.text = "Trường 2";
        // Thêm các lựa chọn khác nếu cần

        selectList.appendChild(option1);
        selectList.appendChild(option2);
        // Thêm các lựa chọn khác nếu cần

        cell1.appendChild(selectList);
        cell2.innerHTML = '<input type="file" class="form-control-file" name="fileData[]">';
    }

    function deleteRow(btn) {
        var row = btn.parentNode.parentNode;
        row.parentNode.removeChild(row);
    }

    function deleteAllRows() {
        var table = document.getElementById("fileTable").getElementsByTagName('tbody')[0];
        table.innerHTML = ""; // Xóa nội dung của tbody
    }
</script>

</body>
</html>
