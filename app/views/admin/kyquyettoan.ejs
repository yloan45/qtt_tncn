<!DOCTYPE html>
<html dir="ltr" lang="en">

<head>
  <%- include('./partials/head') %>
</head>

<body>
  <div class="preloader">
    <div class="lds-ripple">
      <div class="lds-pos"></div>
      <div class="lds-pos"></div>
    </div>
  </div>
  <div id="main-wrapper" data-layout="vertical">
    <header class="topbar" data-navbarbg="skin5">
      <%- include('./partials/header') %>
    </header>
    <aside class="left-sidebar" data-sidebarbg="skin5">
      <div class="scroll-sidebar">
        <%- include('./partials/sidebar') %>
      </div>
    </aside>
    <div class="page-wrapper" style="background-color: white;">
      <div class="page-breadcrumb">
        <div class="row">
          <div class="col-12 d-flex no-block align-items-center">
            <h4 class="page-title">DANH SÁCH TỔNG HỢP THỜI QUYẾT TOÁN THUẾ QUA CÁC NĂM</h4>
          </div>
        </div>
      </div>
      <div class="container-fluid">
        <div style="text-align: right;">
          <table class="table table-bordered mt-3">
            <tr style="text-align: center; background-color: #2886d3; color: white;">
              <th style="font-weight: bold;">
                STT
              </th>
              <th style="font-weight: bold;">Thời gian Cá nhân bắt đầu</th>
              <th style="font-weight: bold;">Thời gian Cá nhân kết thúc</th>
              <th style="font-weight: bold;">Thời gian Tổ chức bắt đầu</th>
              <th style="font-weight: bold;">Thời gian Tổ chức kết thúc</th>
              <th style="font-weight: bold;">Trạng thái</th>
              <th style="font-weight: bold;">Người tạo</th>
              <th style="font-weight: bold;">Ngày tạo</th>
              <th style="font-weight: bold;">Cập nhật lần cuối</th>
              <th style="font-weight: bold;">Hành động</th>
            </tr>
            <% let totalIndex = 0; %>
            <% listOpen.forEach((dateOpen, index)=> { %>
            <tr style="text-align: center;">
              <td><%= index +1 %></td>
              <td><input type="date" name="" value="<%= dateOpen.ngaymo %>" readonly style="text-align: center;border: none;background-color: white; font-size: 14px;"></td>
              <td><input type="date" name="" value="<%= dateOpen.ngaydong %>" readonly style="text-align: center;border: none;background-color: white; font-size: 14px;"></td>
              <td><input type="date" name="" value="<%= dateOpen.ngaymotochuc %>" readonly style="text-align: center;border: none;background-color: white; font-size: 14px;"></td>
              <td><input type="date" name="" value="<%= dateOpen.ngaydongtochuc %>" readonly style="text-align: center;border: none;background-color: white; font-size: 14px;"></td>
              
              <td>
                <% if (dateOpen.trangthai) { %>
                  Đang mở
                <% } else { %>
                  Đã đóng
                <% } %>
              </td>
              
              <td><input value="<%= admin.username %>" readonly style="text-align: center;border: none;background-color: white; font-size: 14px;"></td>
              <td><%= dateOpen.createdAt.toLocaleString() %></td>
              <td><%= dateOpen.updatedAt.toLocaleString() %></td>
              <td>
                <a href="/update-qtt/<%= dateOpen.id %>"><i class="fas fa-edit"></i></a>
                <a href="/delete-qtt/<%= dateOpen.id %>"><i class="fas fa-trash"></i></a>
              </td>
              <% totalIndex++; %>
            </tr>
            <% }) %>
            <div class="d-flex justify-content-between align-items-center">
              <h5> </h5>
            </div>
            <div>
              <a href="#" class="btn btn-warning" id="openModalBtn" style=" width: 120px;
                 font-weight: bolder;" data-bs-toggle="modal" data-bs-target="#kyquyettoantochuc">Tạo mới</a>
            </div>
          </table>
          <div class="d-flex justify-content-between align-items-center">
            <h5 style="text-align: right;">Tổng cộng: <%= totalIndex %></h5>
          </div>
          <br><br><br>
        </div>
      </div>
    </div>
    <input name="adminId" style="display: none;" value="<%= admin.adminId %>">
    <%- include('kyquyettoan.tochuc.ejs') %>
  </div>

  <hr>
      <footer>
        <p style="text-align: center;">Trang admin</p>
      </footer>


</body>
<script>
  document.getElementsByClassName('.currentYear').innerHTML += new Date().getFullYear();
</script>

</html>