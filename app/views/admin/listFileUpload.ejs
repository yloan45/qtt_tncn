<!DOCTYPE html>
<html dir="ltr" lang="en">
  <head>
    <%- include('./partials/head') %>
  </head>
  <body>
    <div class="preloader">
      <div class="lds-ripple">
        <div class="lds-pos"></div>
        <div class="lds-pos"></div>
      </div>
    </div>
    <div id="main-wrapper" data-layout="vertical" >
      <header class="topbar" data-navbarbg="skin5">
        <%- include('./partials/header') %>
      </header>
      <aside class="left-sidebar" data-sidebarbg="skin5">
        <div class="scroll-sidebar">
          <%-include('./partials/sidebar') %>
        </div>
      </aside>
      <div class="page-wrapper" style="background-color: white;">
        <div class="page-breadcrumb">
          <div class="row">
            <div class="col-12 d-flex no-block align-items-center">
              <h4 class="page-title">Danh sách file người dùng upload</h4>
              
            </div>
          </div>
        </div>
        <div class="container-fluid">
         
            <table class="table table-bordered">
                <tr>
                    <th>
                        STT
                    </th>
                    <th>Name</th>
                    <th>Address</th>
                    <th>Email</th>
                    <th>Filename</th>
                    <th>CreatedAt</th>
                    <th>UpdatedAt</th>
                    <th>Role</th>
                    <th>Nội dung</th> <%#  phụ lục - minh chứng - tờ khai ??? %>
                    <th>Hành động</th>
                </tr>
                <% let totalIndex = 0; %>
                <% files.forEach((user, index)=> { %>
                    <tr>
                        <td>
                            <%= index+1 %>
                        </td>
                        <td>
                            <%= user.fullname %>
                        </td>
                        <td>
                            <%= user.address %>
                        </td>
                        <td>
                            <%= user.email %>
                        </td>
                        <td>
                            <%= user.filename %>
                        </td>
                        <td>
                            <%= user.createdAt.toLocaleString() %>
                        </td>
                        <td>
                            <%= user.updatedAt.toLocaleString() %>
                        </td>
                        <td></td>
                        <td></td>
                        <td>
                            <a class="fa fa-download" href="/download?path=<%= user.filePath %>"></a>
                            <!-- Trong tệp EJS -->
                            <a href="/uploads/<%= user.filename %>" target="_blank">Xem tài liệu</a>

                        </td>
                    </tr>
                    <% totalIndex++; %>
                    <% }) %>
                    <h5>Tổng cộng: <%= totalIndex %></h5>
            </table>
          
        </div>
        <hr>
<footer>
  <p style="text-align: center;">Trang admin</p>
</footer>
  </body>
</html>
